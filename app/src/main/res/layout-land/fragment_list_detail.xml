<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ListDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="72dp"
            android:padding="5dp"
            android:background="#fff"
            android:stretchColumns="2">

            <TableRow>

                <TextView
                    android:text="@string/nomor"
                    android:fontFamily="@font/helvetica"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"/>

                <TextView
                    android:id="@+id/txtNomord"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/kepada"
                    android:fontFamily="@font/helvetica"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"/>

                <TextView
                    android:id="@+id/txtKepada"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:paddingRight="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/cc"
                    android:fontFamily="@font/helvetica"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"/>

                <TextView
                    android:id="@+id/txtCc"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/dari"
                    android:fontFamily="@font/helvetica"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"/>


                <TextView
                    android:id="@+id/txtDari"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/tanggal"
                    android:fontFamily="@font/helvetica"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"/>

                <TextView
                    android:id="@+id/txtTanggal"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/perihal"
                    android:fontFamily="@font/helvetica"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"/>

                <TextView
                    android:id="@+id/txtPerihal"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/jenis"
                    android:fontFamily="@font/helvetica"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"/>

                <TextView
                    android:id="@+id/txtJenis"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginStart="22dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lnWVM"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnMVM"
                    android:drawableLeft="@drawable/ic_search_black_24dp"
                    android:text="@string/view"
                    android:fontFamily="@font/helvetica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtWVM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnAFM"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnAFM"
                    android:drawableLeft="@drawable/ic_file_download_black_24dp"
                    android:text="@string/file"
                    android:fontFamily="@font/helvetica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtAFM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>