<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerMain"
    android:background="@drawable/bgappsgrey"
    tools:context=".KategoriIomActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtDashboard"
                android:text="@string/dashboardmemo"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDashboardPBJ"
                android:text="@string/dashboard_kategori"
                android:layout_below="@id/txtDashboard"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="6dp"
                android:layout_below="@id/txtDashboardPBJ"
                android:textSize="14sp"
                android:textColor="#020F13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/mdln1min"
                android:layout_width="62dp"
                android:layout_height="62dp" />

        </RelativeLayout>

        <ScrollView
            android:layout_below="@+id/relatif1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scroll1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:columnOrderPreserved="false">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="184dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/LnMarketingClub"
                        android:layout_width="match_parent"
                        android:layout_height="184dp"
                        android:gravity="center"
                        android:onClick="MarketingClub"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ru.nikartm.support.ImageBadgeView
                            android:id="@+id/iMarketingClub"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            tools:ibv_badgeValue="0"
                            tools:ibv_badgeTextSize="16dp"
                            tools:ibv_badgePadding="5dp"
                            tools:ibv_badgePosition="top_right"
                            tools:ibv_badgeBackground="@drawable/rectangle_rounded"
                            android:src="@drawable/marketing_andro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/marketing"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/club"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/LnFinance"
                        android:layout_width="match_parent"
                        android:layout_height="184dp"
                        android:gravity="center"
                        android:onClick="Finance"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ru.nikartm.support.ImageBadgeView
                            android:id="@+id/iFinance"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            tools:ibv_badgeValue="0"
                            tools:ibv_badgeTextSize="16dp"
                            tools:ibv_badgePadding="5dp"
                            tools:ibv_badgePosition="top_right"
                            tools:ibv_badgeBackground="@drawable/rectangle_rounded"
                            android:src="@drawable/finance_andro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/finance"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/LnQs"
                        android:layout_width="match_parent"
                        android:layout_height="184dp"
                        android:gravity="center"
                        android:onClick="Qs"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ru.nikartm.support.ImageBadgeView
                            android:id="@+id/iQs"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            tools:ibv_badgeValue="0"
                            tools:ibv_badgeTextSize="16dp"
                            tools:ibv_badgePadding="5dp"
                            tools:ibv_badgePosition="top_right"
                            tools:ibv_badgeBackground="@drawable/rectangle_rounded"
                            android:src="@drawable/qs_andro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quality"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/surveyor"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:columnOrderPreserved="false">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/LnLegal"
                        android:layout_width="match_parent"
                        android:layout_height="184dp"
                        android:gravity="center"
                        android:onClick="Legal"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ru.nikartm.support.ImageBadgeView
                            android:id="@+id/iLegal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            tools:ibv_badgeValue="0"
                            tools:ibv_badgeTextSize="16dp"
                            tools:ibv_badgePadding="5dp"
                            tools:ibv_badgePosition="top_right"
                            tools:ibv_badgeBackground="@drawable/rectangle_rounded"
                            android:src="@drawable/legal_andro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/legal"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />



                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/LnPurchasing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="Purchasing"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ru.nikartm.support.ImageBadgeView
                            android:id="@+id/iPurchasing"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            tools:ibv_badgeValue="0"
                            tools:ibv_badgeTextSize="16dp"
                            tools:ibv_badgePadding="5dp"
                            tools:ibv_badgePosition="top_right"
                            tools:ibv_badgeBackground="@drawable/rectangle_rounded"
                            android:src="@drawable/purchasing_andro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/purchasing"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/LnBdd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="Bdd"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ru.nikartm.support.ImageBadgeView
                            android:id="@+id/iBdd"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            tools:ibv_badgeValue="0"
                            tools:ibv_badgeTextSize="16dp"
                            tools:ibv_badgePadding="5dp"
                            tools:ibv_badgePosition="top_right"
                            tools:ibv_badgeBackground="@drawable/rectangle_rounded"
                            android:src="@drawable/bdd_andro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/business"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/develop"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:layout_marginTop="10dp"
                android:columnCount="3"
                android:columnOrderPreserved="false">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/LnProject"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="Project"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ru.nikartm.support.ImageBadgeView
                            android:id="@+id/iProject"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            tools:ibv_badgeValue="0"
                            tools:ibv_badgeTextSize="16dp"
                            tools:ibv_badgePadding="5dp"
                            tools:ibv_badgePosition="top_right"
                            tools:ibv_badgeBackground="@drawable/rectangle_rounded"
                            android:src="@drawable/project_andro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/project"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/LnPromosi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="Promosi"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ru.nikartm.support.ImageBadgeView
                            android:id="@+id/iPromosi"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            tools:ibv_badgeValue="0"
                            tools:ibv_badgeTextSize="16dp"
                            tools:ibv_badgePadding="5dp"
                            tools:ibv_badgePosition="top_right"
                            tools:ibv_badgeBackground="@drawable/rectangle_rounded"
                            android:src="@drawable/promosi_andro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/promosi"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/LnMarketing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="Marketing"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ru.nikartm.support.ImageBadgeView
                            android:id="@+id/iMarketing"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            tools:ibv_badgeValue="0"
                            tools:ibv_badgeTextSize="16dp"
                            tools:ibv_badgePadding="5dp"
                            tools:ibv_badgePosition="top_right"
                            tools:ibv_badgeBackground="@drawable/rectangle_rounded"
                            android:src="@drawable/marketing_andro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/marketing"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:layout_marginTop="10dp"
                android:columnCount="1"
                android:columnOrderPreserved="false"
                android:rowCount="5">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:id="@+id/LnHrd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:onClick="Hrd"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ru.nikartm.support.ImageBadgeView
                            android:id="@+id/iHrd"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            tools:ibv_badgeValue="0"
                            tools:ibv_badgeTextSize="16dp"
                            tools:ibv_badgePadding="5dp"
                            tools:ibv_badgePosition="top_right"
                            tools:ibv_badgeBackground="@drawable/rectangle_rounded"
                            android:src="@drawable/hrd_andro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hrd"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>



            </GridLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:id="@+id/navMain"
        app:menu="@menu/app_menu"
        app:headerLayout="@layout/header_navi"
        android:layout_height="match_parent">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>